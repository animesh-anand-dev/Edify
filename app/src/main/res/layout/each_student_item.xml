<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginHorizontal="10dp"
    android:scrollbars="vertical"
    app:cardCornerRadius="18dp"
    android:weightSum="3"
    android:layout_marginTop="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/card_student_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_account_circle_24"
                />
            <TextView
                android:id="@+id/card_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Student Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/card_student_gender_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/sexual"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/card_student_gender"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="144dp"
                android:text="Gender"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="center"
               android:layout_marginLeft="20dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/card_student_class_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/std"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/card_student_class"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="144dp"
                android:text="Class"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/card_student_board_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/degree"
                android:layout_marginRight="20dp"
               />

            <TextView
                android:id="@+id/card_student_board"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="144dp"
                android:text="Board"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/card_student_subject_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_subject_24"
                android:layout_marginRight="20dp"
                />


            <TextView
                android:id="@+id/card_student_subject_"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="144dp"
                android:text="Subject"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="center"
                />

        </LinearLayout>
        <View
            android:id="@+id/card_student_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
          />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            >
            <ImageView
                android:id="@+id/card_student_call_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:foregroundGravity="left"
                android:src="@drawable/ic_baseline_phone_24"
             />

            <ImageView
                android:id="@+id/card_student_sms_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:foregroundGravity="center"
                android:src="@drawable/ic_baseline_message_24"
               />

            <ImageView
                android:id="@+id/card_student_email_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:foregroundGravity="right"
                android:clickable="true"
                android:src="@drawable/ic_baseline_email_24"
             />
        </LinearLayout>







    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>