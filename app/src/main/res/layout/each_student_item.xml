<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginHorizontal="10dp"
    android:scrollbars="vertical"
    app:cardCornerRadius="18dp"
    android:weightSum="3"
    android:elevation="11dp"
    android:layout_marginTop="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:id="@+id/card_student_name"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:text="Student Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_student_gender"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:paddingLeft="5dp"
                android:layout_weight="1"
                android:text="Gender"
                android:textSize="13sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_student_class_textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="Class: "
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_student_class"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="Class"
                android:textSize="13dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_student_board_textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="Board: "
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_student_board"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:text="Board"
                android:textSize="13dp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_student_subject_textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="Subject: "
                android:textSize="13sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/card_student_subject_"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Subject"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_student_address_textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="Address: "
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_student_address"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Address"
                android:textSize="13sp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:id="@+id/card_student_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_student_call_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foregroundGravity="left"
                android:src="@drawable/ic_baseline_phone_24" />

            <ImageView
                android:id="@+id/card_student_sms_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:src="@drawable/ic_baseline_message_24" />

            <ImageView
                android:id="@+id/card_student_email_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:src="@drawable/ic_baseline_email_24" />
        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>