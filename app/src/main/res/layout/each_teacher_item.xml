<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginHorizontal="10dp"
    android:scrollbars="vertical"
    app:cardCornerRadius="18dp"
    android:weightSum="3"
    android:elevation="11dp"
    android:layout_marginTop="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:weightSum="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_teacher_name"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:text="Teacher Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_teacher_gender"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:paddingLeft="5dp"
                android:layout_weight="1"
                android:text="Gender"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/card_teacher_qualification_textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="Qualification: "
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_teacher_qualification"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Qualification"
                android:textSize="13sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_teacher_profession_textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Profession: "
                android:textSize="13sp"
                android:layout_marginLeft="20dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_teacher_profession"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Profession"
                android:textSize="13sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_teacher_subject_textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="Subject: "
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_teacher_subject_"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Subject"
                android:textSize="13sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_teacher_address_textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="Address: "
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_teacher_address"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Address"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_teacher_fee_textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="Fee: â‚¹"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_teacher_fee"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="0"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_teacher_fee_perHour"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=" per hour"
                android:textSize="13sp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:id="@+id/card_teacher_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_teacher_call_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_weight="1"
                android:foregroundGravity="left"
                android:src="@drawable/ic_baseline_phone_24" />

            <ImageView
                android:id="@+id/card_teacher_sms_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:clickable="true"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:src="@drawable/ic_baseline_message_24" />

            <ImageView
                android:id="@+id/card_teacher_email_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:src="@drawable/ic_baseline_email_24" />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


