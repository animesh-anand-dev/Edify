<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentForm3Activity">

    <TextView
        android:id="@+id/std_form_title_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Availability Details"
        android:textColor="@color/logo_secondary"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/std_hours_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/secondary_variant"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Hours want to study?"
        app:helperText="Hint:-1"
        app:helperTextTextColor="@color/secondary_variant"
        app:hintTextColor="@color/secondary_variant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std_form_title_3"
        app:layout_constraintVertical_bias="0.063"
        app:startIconDrawable="@drawable/hours">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/std_hours_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/std_days_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/secondary_variant"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Days want to study in a week?"
        app:helperText="Hint:-Monday,Wednesday"
        app:helperTextTextColor="@color/secondary_variant"
        app:hintTextColor="@color/secondary_variant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std_hours_layout"
        app:layout_constraintVertical_bias="0.0"
        app:startIconDrawable="@drawable/calendar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/std_days_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/std_no_days_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Number of days want to study in a week?"
        app:helperText="Hint:-3"
        app:helperTextTextColor="@color/secondary_variant"
        app:hintTextColor="@color/secondary_variant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std_days_layout"
        app:layout_constraintVertical_bias="0.0"
        app:startIconDrawable="@drawable/number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/std_no_days_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/std_time_preference"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:paddingLeft="10dp"
        android:text="Preference time for study?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std_no_days_layout"
        app:layout_constraintVertical_bias="0.053" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/std_time_preference_from_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:hint="From"
        app:boxStrokeColor="@color/secondary_variant"
        app:helperTextTextColor="@color/secondary_variant"
        app:hintTextColor="@color/secondary_variant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std_time_preference"
        app:layout_constraintVertical_bias="0.0"
        app:startIconDrawable="@drawable/hours">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/std_time_from"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:inputType="time" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/std_time_preference_to_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:hint="To"
        app:boxStrokeColor="@color/secondary_variant"
        app:hintTextColor="@color/secondary_variant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toEndOf="@+id/std_time_preference_from_layout"
        app:layout_constraintTop_toBottomOf="@+id/std_time_preference"
        app:layout_constraintVertical_bias="0.0"
        app:startIconDrawable="@drawable/hours">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/std_time_to"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:inputType="time" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/stu_form_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std_time_preference_to_layout"
        app:layout_constraintVertical_bias="0.188" />


</androidx.constraintlayout.widget.ConstraintLayout>